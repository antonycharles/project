    "version": "0.2.0",
    "configurations": [
        {
            "name": "Accounts.Login.Web",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildaccountsloginweb",
            "program": "${workspaceFolder}/src/Accounts.Login.Web/bin/Debug/net8.0/Accounts.Login.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Accounts.Login.Web",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/src/Accounts.Login.Web/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ],
    "compounds": [
    {
      "name": "Accounts",
      "configurations": [
        "Accounts.Login.Web"
      ],
      "stopAll": true
    }
  ]
}