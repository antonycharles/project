@page "/projects"
@inject ProjectService projectsService

<h3>Projects</h3>

@if (list is null)
{
    <p>Loadingâ€¦</p>
}
else
{
    <div class="d-flex justify-content-end mb-3">
        <a href="/projects/create" class="btn btn-success">New Project</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th class="text-end"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in list)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Description</td>
                    <td class="text-end">
                        <a href="/projects/@p.Id" class="btn btn-primary btn-sm me-2">Details</a>
                        <a href="/projects/update/@p.Id" class="btn btn-warning btn-sm me-2">Edit</a>
                        <a href="/members/project/@p.Id" class="btn btn-info btn-sm">Members</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    List<ProjectDto> list;

    protected override async Task OnInitializedAsync()
    {
        list = await projectsService.GetAll();
    }
}
