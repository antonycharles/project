@page "/members/create"
@inject MemberService MemberService

<h3>Create Member</h3>

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert @alertClass mb-3">@message</div>
}

<EditForm Model="member" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="mb-3">
        <label for="userId" class="form-label">UserId</label>
        <InputText id="userId" class="form-control" @bind-Value="userIdString" />
    </div>
    <div class="mb-3">
        <label for="projectId" class="form-label">ProjectId</label>
        <InputText id="projectId" class="form-control" @bind-Value="projectIdString" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</EditForm>

@code {
    private MemberCreateDto member = new();
    private string userIdString = string.Empty;
    private string projectIdString = string.Empty;
    private string message = string.Empty;
    private string alertClass = string.Empty;

    private async Task HandleValidSubmit()
    {
        try
        {
            if (!Guid.TryParse(userIdString, out var userId))
                throw new Exception("UserId inválido");
            if (!Guid.TryParse(projectIdString, out var projectId))
                throw new Exception("ProjectId inválido");
            member.UserId = userId;
            member.ProjectId = projectId;
            var result = await MemberService.CreateAsync(member);
            message = $"Member '{result.Id}' created successfully!";
            alertClass = "alert alert-success";
            member = new();
            userIdString = string.Empty;
            projectIdString = string.Empty;
        }
        catch (Exception ex)
        {
            message = $"Error creating member: {ex.Message}";
            alertClass = "alert alert-danger";
        }
    }
}
