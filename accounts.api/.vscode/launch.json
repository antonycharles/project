    "version": "0.2.0",
    "configurations": [
        {
            "name": "Accounts.Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildaccountsapi",
            "program": "${workspaceFolder}/src/Accounts.Api/bin/Debug/net8.0/Accounts.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Accounts.Api/",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/src/Accounts.Api/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}